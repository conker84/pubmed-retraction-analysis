extends layout

block content
  include header
  .container
    .col-lg-6
      .input-group
        .input-group-btn
          button.btn.btn-default.dropdown-toggle(type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" id="chartSelectionDropdown") Chart to Display #[span.caret]
          ul.dropdown-menu(id="chartSelectionMenu")
            li
              a(href="#" data-selection-id="countryRetraction") Frequency of each Country
              a(href="#" data-selection-id="authorRetraction") Frequency of each Author
              a(href="#" data-selection-id="topicRetraction") Frequency of each Topic
        input.form-control(aria-label="..." type="text" id="chartFilterInput")
        .input-group-btn
          button.btn.btn-default.dropdown-toggle(type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" id="filterSelectionDropdown") No Filter #[span.caret]
          ul.dropdown-menu(id="filterSelectionMenu")
            li
              a(href="#" data-selection-id="none") No Filter
              a(href="#" data-selection-id="country") Country
              a(href="#" data-selection-id="topic") Topic
              a(href="#" data-selection-id="year") Year
              a(href="#" data-selection-id="author") Author Name
    div(style="margin-top: 10px")
      .alert.alert-danger(role="alert" id="incorrectInputAlert" style="visibility: hidden;")
    .chart-container
      .chart
